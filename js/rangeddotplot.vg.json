{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Salary Growth Trend in Region(2022 to 2023)", "offset":10},
  "width":"container",
  "height": 250,
  "data": {"url": "https://raw.githubusercontent.com/zhenxu-1171/FIT3179-Visualisation2/main/data/rangeddotplot.csv"},
  
  "transform": [
    {
      "filter": {
        "field": "Year",
        "oneOf": [2022, 2023]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Average of Salary in USD",
      "type": "quantitative",
      "title": "Average Salary in USD"
    },
    "y": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Region",
          "type": "nominal"
        },
        "color": {"value": "#db646f"},
      }
    },
    {
      "params": [{
        "name":"year_selection",
        "select":{"type":"point", "fields": ["Year"]},
        "bind":"legend"
      },
      {
    "name": "view",
    "select": "interval",
    "bind": "scales"
  }],
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {
            "domain": [2022, 2023],
            "range": ["#e6959c", "#911a24"]
          },
          "title": "Year"
        },
        "size": {"value": 100},
        "opacity": {
        "condition": {"param": "year_selection", "value": 1},
        "value": 0.1
      },
     "tooltip": [
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Average of Salary in USD", "type": "quantitative", "title": "Average Salary in USD", "format": ".2f"}
    ]
      }
    }
  ],
  "config": {"title": {"fontSize":15}}
}
