{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width":"container",
  "title":"Salary Range for Each Country",
  "data": {"url": "https://raw.githubusercontent.com/zhenxu-1171/FIT3179-Visualisation2/main/data/v5_Latest_Data_Science_Salaries_Region.csv"},

  "params": [
    {
      "name": "region_select",
      "value":"Europe",
      "bind":{
        "input":"select",
        "options":
            [null,
            "Africa",
            "Asia",
            "Europe",
            "Middle East",
            "North America",
            "Oceania",
            "South America"],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "Middle East",
          "North America",
          "Oceania",
          "South America"
        ],
        "name":"Select Region: "
      }
    }
  ],
  "transform": [
    {"calculate": "datum['Salary in USD'] - 0", "as": "Salary in USD"},
    {"filter": "region_select == null || datum['Region'] == region_select"}
  ],
  "mark": {
    "type": "boxplot",
    "extent": "min-max",
    "median": {"color": "red"},
    "ticks": true
  },
  "encoding": {
    "x": {"field": "Company Location", "type": "nominal"},
    "color": {"field": "Region", "type": "nominal", "legend": null, "scale":{
      "domain": 
      [
        "Africa",
        "Asia",
        "Europe",
        "Middle East",
        "North America",
        "Oceania",
        "South America"],
      "range":[
        "#FF5733", 
        "#3498DB", 
        "#27AE60", 
        "#F1C40F",  
        "#9B59B6", 
        "#c70a88",  
        "#34495E"
      ]
    }},
    "y": {
      "field": "Salary in USD",
      "type": "quantitative",
      "scale": {"zero": false}
    }
  },
  "config": {
    "title": {"fontSize":15}
  }
}
