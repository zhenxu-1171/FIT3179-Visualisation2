{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/zhenxu-1171/FIT3179-Visualisation2/main/data/donut1.csv"
  },
  "encoding": {
    "theta": {"field": "Job Title", "type": "quantitative", "stack": true},
    "color": {"field": "Company Size", "type": "nominal"},
    "tooltip": [
      {"field": "Company Size", "type": "nominal", "title": "Company Size"},
      {"field": "Job Title", "type": "quantitative", "title": "Number of Data Science Employee"}
    ]
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 50}
  }, {
    "mark": {"type": "text", "radius": 110},
    "encoding": {
      "text": {"field": "Job Title", "type": "nominal"}
    }
  }]
}
